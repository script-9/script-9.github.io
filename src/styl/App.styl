*
  box-sizing border-box

@require 'utils/colors.styl'
@require 'utils/fonts.styl'
// @require 'components/*.styl'

html
  background $palette-7

body
  margin 0
  padding 0
  @extend .VT323
  color $palette-0
  font-size $font-large

p
  margin 0
  padding 0

ul
  padding 0
  margin 0
  list-style none

a
  color $palette-0
  &:hover
    background $palette-0
    color $palette-7

nav
  border-bottom solid $palette-6 2px
  display flex
  justify-content space-between
  margin-bottom calc(1.5rem*1.5)
  ul
    display flex
  a
    text-decoration none
    text-transform uppercase
    padding 0 0.5rem
    color $palette-2
    &:hover
      color $palette-0
      background $palette-7
    &.active
      color $palette-1
      background $palette-6
      pointer-events none
      cursor default

.Home
  h1
    visibility hidden
    position absolute

  .logo-and-timestamp
    display grid
    grid-template-columns 50% 50%
    grid-row-gap 0.75rem
    width calc(100vw - 3rem)
    max-width 46rem
    margin 0 auto 3rem auto
    img
      width 100%
      display inline-block
      grid-column 1/3
      image-rendering pixelated
    span
      font-size $font-small
      color $palette-2
      &:nth-child(3)
        text-align right

  p
    width calc(100vw - 3rem)
    max-width 46rem
    margin 3rem auto
    color $palette-2

    &.thumbnails
      margin 0 auto
      display flex
      justify-content space-evenly
      flex-wrap wrap
      img
        width calc(128px - 8px)
        padding 0.75rem 4px
        image-rendering pixelated

    &.feature
      display grid
      grid-template-columns auto 30rem
      grid-column-gap 1.5rem
      margin-bottom 6rem
      @media screen and (max-width: 44rem)
        grid-template-columns 100%
        grid-column-gap 0
        grid-row-gap 1.5rem

      span
        &:before
          content 'â–ª '
        font-size $font-large
      img
        width 100%
        image-rendering pixelated
        @media screen and (max-width: 44rem)
          max-width 32rem
          margin 0 auto

.Run
  margin 3rem auto
  width calc(128px * 3 + 4px)
  border solid $palette-6 2px
  canvas
    display block
    margin 0 auto
    image-rendering pixelated
    width calc(128px * 3)
    height calc(128px * 3)

.Code
  display grid
  max-width calc(100vw - 6rem)
  margin 0 auto
  grid-template-columns auto calc(128px * 3 + 4px)
  grid-column-gap 3rem
  grid-row-gap 2rem
  // border solid red 1px

  .Editor
    border solid $palette-6 2px
    textarea
      display block
      @extend .VT323
      width 100%
      height 100%
      font-size $font-medium
      background $palette-6
      color $palette-0
      border solid $palette-1 1px

  .Output
    border solid $palette-6 2px
    canvas
      display block
      width calc(128px * 3)
      height calc(128px * 3)
      image-rendering pixelated

    .buttons-and-duration
      // button
      margin 0.25rem 0 0 0
      //   padding 0
      //   display inline-block
      display flex
      justify-content space-between
      button
        @extend .VT323
        font-size $font-medium
        background $palette-7
        color $palette-1
        border solid $palette-3 1px
        margin 0 0.25rem
        &:hover
          cursor pointer
          color $palette-0
          border solid $palette-1 1px

      .duration
        button
          pointer-events none
          background $palette-7
          color $palette-1
          border solid $palette-7 1px

